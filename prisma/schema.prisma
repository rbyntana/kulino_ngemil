// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RawMaterial {
  id          String   @id @default(cuid())
  name        String
  unitPrice   Float
  quantity    Float
  unit        String
  totalPrice  Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  transactions Transaction[] // ðŸ”¥ INI YANG PENTING
  menuItems    MenuItem[]
}


model Size {
  id        String  @id @default(cuid())
  size      String
  price     Float
  stock     Int
  menuId    String
  menu      Menu    @relation(fields: [menuId], references: [id], onDelete: Cascade)
  sales     Sale[]  // Tetap terhubung ke Sale (Detail Item)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Menu {
  id          String   @id @default(cuid())
  name        String
  image       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  sizes       Size[]
  sales       Sale[]  // Tetap terhubung ke Sale (Detail Item)
  rawMaterials MenuItem[]
}

model MenuItem {
  id              String       @id @default(cuid())
  menuId          String
  rawMaterialId   String
  quantity        Float
  menu            Menu         @relation(fields: [menuId], references: [id], onDelete: Cascade)
  rawMaterial     RawMaterial  @relation(fields: [rawMaterialId], references: [id], onDelete: Cascade)
  createdAt       DateTime     @default(now())
}

// --- MODEL BARU: HEADER TRANSAKSI ---
model SalesHeader {
  id          String   @id @default(cuid())
  buyerName   String
  totalAmount Float
  date        DateTime @default(now())
  createdAt   DateTime @default(now())
  
  // Relasi ke Item
  items       Sale[]   
  
  // Relasi ke Transaction (Nama relasi: transaksiUang)
  transaction Transaction? @relation("transaksiUang")
}

// --- MODEL YANG DIUBAH: DETAIL ITEM ---
model Sale {
  id        String   @id @default(cuid())
  
  // Kita buat relasi ke Header baru ini
  headerId  String
  header    SalesHeader @relation(fields: [headerId], references: [id], onDelete: Cascade)
  
  // Data detail tetap ada
  menuId    String
  sizeId    String
  quantity  Int
  price     Float
  total     Float // Harga satuan * quantity
  
  // Kolom lama yang mungkin tidak terlalu dipakai lagi tapi kita biarkan agar tidak error
  date      DateTime @default(now()) 
  createdAt DateTime @default(now())
  
  // Relasi
  menu      Menu     @relation(fields: [menuId], references: [id], onDelete: Cascade)
  size      Size     @relation(fields: [sizeId], references: [id], onDelete: Cascade)
  
  // Kita hapus transactionId unik di sini, karena transaksi sekarang ada di Header
  // Jika Prisma complain saat npx prisma db push karena kolom ini sudah ada di DB,
  // kita akan biarkan kolom fisiknya ada di database tapi dihilangkan di schema (atau buat nullable).
  // Tapi untuk schema bersih, relasi cukup lewat Header.
}

model Transaction {
  id          String   @id @default(cuid())
  type        String   // INCOME | EXPENSE
  amount      Float
  description String
  date        DateTime @default(now())
  createdAt   DateTime @default(now())

  // sudah ada
  salesHeaderId String?  @unique
  salesHeader   SalesHeader? @relation("transaksiUang", fields: [salesHeaderId], references: [id])

  // ðŸ”¥ BARU (untuk bahan baku)
  rawMaterialId String?
  rawMaterial   RawMaterial? @relation(fields: [rawMaterialId], references: [id], onDelete: Cascade)

  isManual   Boolean  @default(false)
}




model PreOrder {
  id          String   @id @default(cuid())
  buyerName   String
  totalAmount Int
  status      String // 'pending', 'ready', 'taken'
  cart        String // Kita simpan cart sebagai String JSON
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // RELASI (Opsional, untuk memanggil data lain)
  // salesHeader SalesHeader? <-- (Jika kamu ingin relasi, nanti diisi manual)
}