datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RawMaterial {
  id          String   @id @default(cuid())
  name        String
  unitPrice   Float
  quantity    Float
  unit        String
  totalPrice  Float
  
  // ‚¨áÔ∏è UPDATE: Tambahkan kolom date di sini
  date        DateTime? 
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  transactions Transaction[]
  menuItems    MenuItem[]
}

model Size {
  id        String  @id @default(cuid())
  size      String
  price     Float
  stock     Int
  menuId    String
  menu      Menu    @relation(fields: [menuId], references: [id], onDelete: Cascade)
  sales     Sale[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Menu {
  id          String   @id @default(cuid())
  name        String
  image       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  sizes       Size[]
  sales       Sale[]
  rawMaterials MenuItem[]
}

model MenuItem {
  id              String       @id @default(cuid())
  menuId          String
  rawMaterialId   String
  quantity        Float
  menu            Menu         @relation(fields: [menuId], references: [id], onDelete: Cascade)
  rawMaterial     RawMaterial  @relation(fields: [rawMaterialId], references: [id], onDelete: Cascade)
  createdAt       DateTime     @default(now())
}

// --- MODEL BARU: HEADER TRANSAKSI ---
model SalesHeader {
  id          String   @id @default(cuid())
  buyerName   String
  totalAmount Float
  date        DateTime @default(now()) // ‚¨áÔ∏è PENTING: Header punya date
  createdAt   DateTime @default(now())
  
  items       Sale[]   
  transaction Transaction? @relation("transaksiUang")
}

// --- MODEL YANG DIUBAH: DETAIL ITEM ---
model Sale {
  id        String   @id @default(cuid())
  headerId  String
  header    SalesHeader @relation(fields: [headerId], references: [id], onDelete: Cascade)
  menuId    String
  sizeId    String
  quantity  Int
  price     Float
  total     Float
  date      DateTime @default(now()) 
  createdAt DateTime @default(now())
  menu      Menu     @relation(fields: [menuId], references: [id], onDelete: Cascade)
  size      Size     @relation(fields: [sizeId], references: [id], onDelete: Cascade)
}

model Transaction {
  id          String   @id @default(cuid())
  type        String   // INCOME | EXPENSE
  amount      Float
  description String
  
  // ‚¨áÔ∏è PENTING: Kolom date ini yang akan tampil di Tab Transaksi
  date        DateTime @default(now()) 
  
  createdAt   DateTime @default(now())

  salesHeaderId String?  @unique
  salesHeader   SalesHeader? @relation("transaksiUang", fields: [salesHeaderId], references: [id])

  // üî• Untuk bahan baku
  rawMaterialId String?
  rawMaterial   RawMaterial? @relation(fields: [rawMaterialId], references: [id], onDelete: Cascade)

  isManual   Boolean  @default(false)
}

model PreOrder {
  id          String   @id @default(cuid())
  buyerName   String
  totalAmount Int
  status      String 
  cart        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}